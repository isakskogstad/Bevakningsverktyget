# ===========================================
# Bevakningsverktyget - Miljövariabler
# ===========================================
# Kopiera denna fil till .env och fyll i dina värden

# -------------------------------------------
# Supabase (OBLIGATORISK)
# -------------------------------------------
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-anon-key
SUPABASE_SERVICE_KEY=your-service-role-key

# -------------------------------------------
# CORS (kommaseparerad lista av tillåtna origins)
# -------------------------------------------
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# -------------------------------------------
# DI.se (OBLIGATORISK om DI-scraper används)
# -------------------------------------------
DI_EMAIL=din@epost.se
DI_PASSWORD=ditt-losenord

# -------------------------------------------
# 3D Secure (för kortbetalningar)
# -------------------------------------------
SECURE_3D_PASSWORD=ditt-3d-secure-losenord

# -------------------------------------------
# Resend (för e-postnotifikationer)
# -------------------------------------------
RESEND_API_KEY=re_xxxxx

# -------------------------------------------
# Twilio SMS (för OTP-koder vid 3D Secure)
# -------------------------------------------
TWILIO_ACCOUNT_SID=your-account-sid
TWILIO_AUTH_TOKEN=your-auth-token
TWILIO_PHONE_NUMBER=+46xxxxxxxxx
# Alternativ auth med API Key
TWILIO_API_KEY_SID=
TWILIO_API_KEY_SECRET=

# -------------------------------------------
# Anthropic Claude (för PDF-analys)
# -------------------------------------------
ANTHROPIC_API_KEY=sk-ant-api03-xxxxx

# -------------------------------------------
# Ratsit (för inkomstdeklarationer)
# -------------------------------------------
# Företagskonto för automatisk debitering
RATSIT_EMAIL=ditt@foretag.se
RATSIT_PASSWORD=ditt-losenord

# -------------------------------------------
# CAPTCHA-lösare (valfritt)
# -------------------------------------------
# NopeCHA (gratis: 100/dag utan nyckel)
NOPECHA_API_KEY=
# 2Captcha (betalservice)
TWOCAPTCHA_API_KEY=
# AntiCaptcha (betalservice)
ANTICAPTCHA_API_KEY=

# -------------------------------------------
# Admin-panel för API-nycklar
# -------------------------------------------
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change-this-password
JWT_SECRET=generate-random-32-char-string
ENCRYPTION_KEY=exactly-32-characters-for-aes256

# -------------------------------------------
# Webbläsarinställningar
# -------------------------------------------
HEADLESS=true
CHROME_PATH=

# -------------------------------------------
# Schemaläggare
# -------------------------------------------
CHECK_INTERVAL_MINUTES=60

# -------------------------------------------
# Paths (valfritt - använd om companies.json inte finns i projektrot)
# -------------------------------------------
COMPANIES_PATH_OVERRIDE=
